<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wesleyrnash.nfcreadandwritenofragment" >

    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wesleyrnash.nfcreadandwritenofragment.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wesleyrnash.nfcreadandwritenofragment.ReadActivity"
            android:label="@string/title_activity_read"
            android:parentActivityName="com.wesleyrnash.nfcreadandwritenofragment.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wesleyrnash.nfcreadandwritenofragment.MainActivity" />
        </activity>
        <activity
            android:name="com.wesleyrnash.nfcreadandwritenofragment.WriteActivity"
            android:label="@string/title_activity_write"
            android:parentActivityName="com.wesleyrnash.nfcreadandwritenofragment.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wesleyrnash.nfcreadandwritenofragment.MainActivity" />
        </activity>
        <activity
            android:name="com.wesleyrnash.nfcreadandwritenofragment.TestActivity"
            android:label="@string/title_activity_test"
            android:parentActivityName="com.wesleyrnash.nfcreadandwritenofragment.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wesleyrnash.nfcreadandwritenofragment.MainActivity" />
        </activity>
    </application>

</manifest>
